{
  "name": "Salary Seeker",
  "version": "1.0.2",
  "description": "Calculate the salary range for jobs advertised on Seek.",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "18": "icons/icon18.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "https://*.seek.com.au/*",
    "https://*.seek.co.nz/*"
  ],
  "manifest_version": 2,
  "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self'; connect-src https://jobsearch-api.cloud.seek.com.au"
}
